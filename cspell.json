{
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
	"version": "0.2",
	"import": ["@cspell/dict-pl_pl/cspell-ext.json"],
	"ignorePaths": [
		"pnpm-lock.yaml",
		"cspell.json",
		"**.svg",
		".git/",
		".gitignore",
		".vscode/",
		"LICENSE.md",
		"patches/"
	],
	"dictionaries": ["lorem-ipsum"],
	"useGitignore": true,
	"words": ["codegen", "codeowner", "hmac", "naamio", "spritesheet", "statefulness", "typecheck"],
	"enableGlobDot": true,
	"ignoreWords": [
		"fontaine",
		"fontsource",
		"lingui",
		"mailpit",
		"pawelblaszczyk",
		"predev",
		"rolldown",
		"stylex",
		"stylexjs",
		"tanstack",
		"taze",
		"tseslint",
		"vite",
		"vitejs"
	],
	"overrides": [
		{ "language": "pl-PL,en-US", "filename": "apps/janus/src/locales/pl-PL.po" },
		{ "filename": ["apps/mercury/src/modules/database/migrations/**"], "ignoreWords": ["timestamptz"] }
	]
}
