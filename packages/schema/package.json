{
	"name": "@naamio/schema",
	"description": "Schema of various entities and domain specific objects",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#src/*": "./dist/src/*"
	},
	"exports": {
		"./api": {
			"types": "./dist/src/api.d.ts",
			"default": "./dist/src/api.js"
		},
		"./domain": {
			"types": "./dist/src/domain.d.ts",
			"default": "./dist/src/domain.js"
		}
	},
	"scripts": {
		"build": "tsc --noCheck && tsc-alias",
		"dev": "tsc --noCheck && tsc-alias",
		"effect-diagnostics": "effect-language-service diagnostics --project tsconfig.json",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@effect/experimental": "catalog:",
		"@effect/sql": "catalog:",
		"@electric-sql/client": "catalog:",
		"effect": "catalog:"
	},
	"devDependencies": {
		"@effect/language-service": "catalog:",
		"@naamio/eslint-config": "workspace:*",
		"@naamio/typescript-config": "workspace:*",
		"eslint": "catalog:",
		"tsc-alias": "catalog:",
		"typescript": "catalog:"
	}
}
