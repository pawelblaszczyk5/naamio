{
	"name": "@naamio/api",
	"description": "API schema that allows type-safe consumption and enforcing implementation",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#src/*": "./dist/src/*"
	},
	"exports": {
		".": {
			"types": "./dist/src/mod.d.ts",
			"default": "./dist/src/mod.js"
		}
	},
	"scripts": {
		"build": "tsc --noCheck && tsc-alias",
		"dev": "tsc --noCheck && tsc-alias",
		"effect-diagnostics": "effect-language-service diagnostics --project tsconfig.json",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@effect/platform": "catalog:",
		"effect": "catalog:"
	},
	"devDependencies": {
		"@effect/language-service": "catalog:",
		"@naamio/eslint-config": "workspace:*",
		"@naamio/typescript-config": "workspace:*",
		"eslint": "catalog:",
		"tsc-alias": "catalog:",
		"typescript": "catalog:"
	}
}
