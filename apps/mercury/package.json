{
	"name": "@naamio/mercury",
	"description": "The API layer of Naamio system",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#src/*": "./src/*"
	},
	"scripts": {
		"dev": "wait-on tcp:postgres.naamio.orb.local:5432 tcp:otel-lgtm.naamio.orb.local:4318 tcp:electric.naamio.orb.local:3000 && node --env-file=.env --import=tsx --watch ./src/mod.ts",
		"effect-diagnostics": "effect-language-service diagnostics --project tsconfig.json",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"preview": "wait-on tcp:postgres.naamio.orb.local:5432 tcp:otel-lgtm.naamio.orb.local:4318 tcp:electric.naamio.orb.local:3000 && node --env-file=.env --import=tsx ./src/mod.ts",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@effect/cluster": "catalog:",
		"@effect/experimental": "catalog:",
		"@effect/platform": "catalog:",
		"@effect/platform-node": "catalog:",
		"@effect/rpc": "catalog:",
		"@effect/sql": "catalog:",
		"@effect/sql-pg": "catalog:",
		"@effect/workflow": "catalog:",
		"@electric-sql/client": "catalog:",
		"@naamio/api": "workspace:",
		"@naamio/hmac": "workspace:",
		"@naamio/id-generator": "workspace:",
		"@naamio/observability": "workspace:",
		"@naamio/schema": "workspace:",
		"@node-rs/argon2": "^2.0.2",
		"@simplewebauthn/server": "^13.2.2",
		"effect": "catalog:",
		"nanoid": "^5.1.6",
		"tsx": "^4.21.0"
	},
	"devDependencies": {
		"@effect/language-service": "catalog:",
		"@naamio/eslint-config": "workspace:",
		"@naamio/typescript-config": "workspace:",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"wait-on": "catalog:"
	}
}
