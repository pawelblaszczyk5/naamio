{
	"name": "@naamio/hephaestus",
	"description": "Storybook for displaying Naamio design system",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#storybook/*": "./.storybook/*",
		"#src/*": "./src/*"
	},
	"scripts": {
		"build": "storybook build --output-dir dist",
		"dev": "storybook dev --port 6204 --no-open",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"preview": "serve dist --listen 6204",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@naamio/design-system": "workspace:*",
		"@naamio/stylex": "workspace:*",
		"react": "catalog:",
		"react-dom": "catalog:"
	},
	"devDependencies": {
		"@fontsource-variable/ibm-plex-sans": "catalog:",
		"@naamio/eslint-config": "workspace:*",
		"@naamio/typescript-config": "workspace:*",
		"@storybook/addon-a11y": "^10.1.3",
		"@storybook/addon-docs": "^10.1.3",
		"@storybook/react-vite": "^10.1.3",
		"@stylexjs/unplugin": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@vitejs/plugin-react": "catalog:",
		"babel-plugin-react-compiler": "catalog:",
		"eslint": "catalog:",
		"fontaine": "catalog:",
		"serve": "^14.2.5",
		"storybook": "^10.1.3",
		"typescript": "catalog:",
		"vite": "catalog:"
	}
}
